osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# bsp or float (default: float)
yabai -m config layout bsp

yabai -m config window_placement second_child # New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_border                off
yabai -m config window_shadow                on
yabai -m config active_window_border_color   0xff008bff
yabai -m config normal_window_border_color   0x01000000
yabai -m config window_opacity on
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.95
yabai -m config split_ratio                  0.50
yabai -m config window_topmost off # Some application/windows appear to have trouble with child windows when made topmost
yabai -m config auto_balance on
yabai -m config window_animation_duration    0.0
yabai -m config mouse_follows_focus on
yabai -m config external_bar all:0:0

# Set all padding and gaps to 20pt (default: 0)
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5

function yabai_rule {
  yabai -m rule --add "$@"
  yabai -m rule --apply "$@"
}

# Space 1
yabai_rule app="^Arc$" space=^1

# Space 2
yabai_rule app="^iTerm2$" space=^2
yabai_rule app="^kitty$" space=^2
yabai_rule app="Alacritty" space=^2
yabai_rule app="Code" space=^2

# Space 3
yabai -m space 3 --layout stack
yabai_rule app="^Spotify$" space=^3
yabai_rule app="Discord" space=^3
yabai_rule app="Messenger" space=^3
yabai_rule app="WhatsApp" space=^3

# Space 4
yabai -m space 4 --layout stack
yabai_rule app="Obsidian" space=^4
yabai_rule app="OrbStack" space=^4
yabai_rule app="Notion" space=^4

# Disable specific apps
# For yabai_rule app=".*" sub-layer=normal to apply to windows that are already opened before yabai is launched or this rule is added
# you need to also run yabai -m rule --apply
yabai_rule app=".*" sub-layer=normal
yabai_rule app="^System Preferences$" manage=off
yabai_rule app="^System Settings$" manage=off
yabai_rule app="^Karabiner-Elements$" manage=off
yabai_rule app="^Stats$" manage=off
yabai_rule app="^ExpressVPN$" manage=off
yabai_rule app="^Hearthstone$" manage=off
# yabai_rule app="Finder" manage=off
yabai_rule app="^Mail$" manage=off
yabai_rule app="^NordVPN$" manage=off
